#!/bin/bash
#PBS -l nodes=1:ppn=1
#PBS -l walltime=1:00:00
#PBS -N dsi-studio-atk

set -e  

dwi=$(jq -r .src config.json)
bval=$(jq -r .bvals config.json)
bvec=$(jq -r .bvecs config.json)


time singularity exec -e docker://dsistudio/dsistudio --action=atk --source=${dwi} --bval=${bval} --bvec=${bvec}
